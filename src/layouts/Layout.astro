---
import { ClientRouter } from 'astro:transitions'

interface Props {
  title: string
  description: string
  keywords: string
}

const { title, description, keywords } = Astro.props
---

<!doctype html>
<html lang="en" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Manuel Gil - Software Developer & Open Source Advocate" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <meta name="generator" content={Astro.generator} />

    <title>{title}</title>

    <meta name="title" content={title} />
    <meta name="description" content={description} />
    <meta name="keywords" content={keywords} />

    <meta name="author" content="Manuel Gil" />
    <meta name="robots" content="index, follow" />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://imgil.dev/" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content="https://avatars.githubusercontent.com/u/25472045" />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content="https://imgil.dev/" />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content="https://avatars.githubusercontent.com/u/25472045" />

    <link rel="canonical" href="https://imgil.dev/" />

    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "Person",
        "name": "Manuel Gil",
        "url": "https://imgil.dev/",
        "sameAs": [
          "https://www.linkedin.com/in/imgildev",
          "https://github.com/ManuelGil",
          "https://twitch.tv/imgildev",
          "https://youtube.com/@imgildev",
          "https://twitter.com/imgildev"
        ],
        "jobTitle": "Indie Maker & Open Source Developer",
        "description": "I build Open Source tools, create VSCode extensions and share knowledge in the community.",
        "image": "https://avatars.githubusercontent.com/u/25472045"
      }
    </script>

    <ClientRouter />
  </head>
  <body class="bg-zinc-900 text-zinc-100">
    <nav class="fixed top-0 z-50 w-full border-b border-zinc-800 bg-zinc-900/80 backdrop-blur-sm">
      <div class="container mx-auto px-4 py-4">
        <div class="flex items-center justify-between md:hidden">
          <a href="/" class="text-lg font-bold">Manuel Gil</a>
          <button
            id="menu-toggle"
            class="text-zinc-100 hover:text-primary focus:outline-none"
            aria-label="Toggle menu"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="h-6 w-6"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M4 6h16M4 12h16M4 18h16"></path>
            </svg>
          </button>
        </div>
        <ul
          id="mobile-menu"
          class="hidden flex-col space-y-4 pt-4 md:flex md:flex-row md:items-center md:justify-center md:space-x-8 md:space-y-0 md:pt-0"
        >
          <li>
            <a
              href="/"
              class="block text-sm uppercase tracking-wider transition-colors hover:text-primary"
              >Home</a
            >
          </li>
          <li>
            <a
              href="https://manuelgil.me"
              target="_blank"
              rel="noopener noreferrer"
              class="block text-sm uppercase tracking-wider transition-colors hover:text-primary"
              >Open Source Projects</a
            >
          </li>
          <li>
            <a
              href="/talks--communities"
              class="block text-sm uppercase tracking-wider transition-colors hover:text-primary"
              >Talks & Communities</a
            >
          </li>
          <li>
            <a
              href="/how-to-support"
              class="block text-sm uppercase tracking-wider transition-colors hover:text-primary"
              >How to Support</a
            >
          </li>
          <li>
            <a
              href="/why-sponsor"
              class="block text-sm uppercase tracking-wider transition-colors hover:text-primary"
              >Why Sponsor?</a
            >
          </li>
          <li>
            <a
              href="/sponsors"
              class="block text-sm uppercase tracking-wider transition-colors hover:text-primary"
              >Sponsors</a
            >
          </li>
          <li>
            <a
              href="/about-me"
              class="block text-sm uppercase tracking-wider transition-colors hover:text-primary"
              >About Me</a
            >
          </li>
        </ul>
      </div>
    </nav>

    <script>
      const menuToggle = document.getElementById('menu-toggle')
      const mobileMenu = document.getElementById('mobile-menu')

      if (menuToggle && mobileMenu) {
        menuToggle.addEventListener('click', () => {
          mobileMenu.classList.toggle('hidden')
        })
      }
    </script>

    <slot />
    <footer class="mt-16 border-t border-zinc-800 py-8">
      <div class="container mx-auto px-4 text-center">
        <p class="text-sm text-zinc-400">
          Built with ❤️ for the developer community. Together, we build the future of tech.
        </p>
      </div>
    </footer>
  </body>
</html>
