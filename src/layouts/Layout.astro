---
interface Props {
  title: string
}

const { title } = Astro.props
---

<!doctype html>
<html lang="en" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Manuel Gil - Software Developer & Open Source Advocate" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="bg-zinc-900 text-zinc-100">
    <nav class="fixed top-0 z-50 w-full border-b border-zinc-800 bg-zinc-900/80 backdrop-blur-sm">
      <div class="container mx-auto px-4 py-4">
        <ul class="flex justify-center space-x-8">
          <li>
            <a
              href="/"
              class="text-sm uppercase tracking-wider transition-colors hover:text-primary">Home</a
            >
          </li>
          <li>
            <a
              href="https://manuelgil.me"
              target="_blank"
              rel="noopener noreferrer"
              class="text-sm uppercase tracking-wider transition-colors hover:text-primary"
              >Open Source Projects</a
            >
          </li>
          <li>
            <a
              href="/talks--communities"
              class="text-sm uppercase tracking-wider transition-colors hover:text-primary"
              >Talks & Communities</a
            >
          </li>
          <li>
            <a
              href="/how-to-support"
              class="text-sm uppercase tracking-wider transition-colors hover:text-primary"
              >How to Support</a
            >
          </li>
          <li>
            <a
              href="/why-sponsor"
              class="text-sm uppercase tracking-wider transition-colors hover:text-primary"
              >Why Sponsor?</a
            >
          </li>
          <li>
            <a
              href="/faqs"
              class="text-sm uppercase tracking-wider transition-colors hover:text-primary">FAQs</a
            >
          </li>
          <li>
            <a
              href="/about-me"
              class="text-sm uppercase tracking-wider transition-colors hover:text-primary"
              >About Me</a
            >
          </li>
        </ul>
      </div>
    </nav>
    <slot />
    <footer class="mt-16 border-t border-zinc-800 py-8">
      <div class="container mx-auto px-4 text-center">
        <p class="text-sm text-zinc-400">
          Built with ❤️ for the developer community. Together, we build the future of tech.
        </p>
      </div>
    </footer>
  </body>
</html>
