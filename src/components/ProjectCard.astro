---
interface Props {
  title: string
  description: string
  link: string
  details?: string[]
}

const { title, description, link, details = [] } = Astro.props
---

<div
  class="rounded-xl border border-zinc-700 bg-zinc-800/50 p-6 transition-colors hover:bg-zinc-800"
>
  <h4 class="mb-2 text-xl font-bold text-zinc-100">{title}</h4>
  <p class="mb-4 text-zinc-400">{description}</p>
  {
    details.length > 0 && (
      <ul class="mb-4 space-y-2 text-zinc-400">
        {details.map((detail) => (
          <li class="flex items-center">
            <span class="mr-2 text-primary">â–¹</span>
            {detail}
          </li>
        ))}
      </ul>
    )
  }
  <a
    href={link}
    class="inline-flex items-center text-primary transition-colors hover:text-primary-dark"
    target="_blank"
    rel="noopener noreferrer"
  >
    View on GitHub
    <svg
      xmlns="http://www.w3.org/2000/svg"
      class="ml-1 h-4 w-4"
      viewBox="0 0 20 20"
      fill="currentColor"
    >
      <path
        fill-rule="evenodd"
        d="M10.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L12.586 11H5a1 1 0 110-2h7.586l-2.293-2.293a1 1 0 010-1.414z"
        clip-rule="evenodd"></path>
    </svg>
  </a>
</div>
